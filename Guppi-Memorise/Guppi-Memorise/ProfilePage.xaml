<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guppi_Memorise.ProfilePage"
             xmlns:local="clr-namespace:Guppi_Memorise;assembly=Guppi-Memorise">

    <NavigationPage.TitleView>
        <Label Text="Профиль" FontSize="20" TextColor="#012545" FontFamily="Russo One"/>
    </NavigationPage.TitleView>

    <StackLayout Padding="10" HorizontalOptions="Start" VerticalOptions="Start">
        <Label Text="Никнейм" Margin="150, 0, 0, 0" FontFamily="Russo One" FontSize="30" TextColor="#012545" HorizontalOptions="CenterAndExpand"/>

        <Image HorizontalOptions="Center" Margin="0, 0, 205, 0" VerticalOptions="Start" WidthRequest="160" HeightRequest="160" Source="{local:ImageResource Guppi-Memorise.Assets.avatar.png}">
        </Image>
    </StackLayout>
</ContentPage>