<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guppi_Memorise.MainPage"
             xmlns:local="clr-namespace:Guppi_Memorise;assembly=Guppi-Memorise">
    <NavigationPage.TitleView>
        <Label Text="Guppi Memorise" FontSize="20" TextColor="#012545" FontFamily="Russo One" VerticalOptions="Center"/>
    </NavigationPage.TitleView>

    <StackLayout Padding="10">
        <Label Text="Добро пожаловать!" FontSize="30" TextColor="#012545" HorizontalOptions="CenterAndExpand" VerticalTextAlignment="Center" FontFamily="Russo One" Margin="0, 25"/>
        <Grid HorizontalOptions="CenterAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="180"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ImageButton IsEnabled="True" CornerRadius="5" Grid.Column="0" Grid.Row="0" Source="{local:ImageResource Guppi-Memorise.Assets.flash-cards-icon-rev.png}" Clicked="FlashCardsButton">
                <ImageButton.BackgroundColor>
                    <!-- Necessary crutch -->
                    <Color>White</Color>
                </ImageButton.BackgroundColor>
                <ImageButton.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#00CCAD" Offset="0.0"/>
                        <GradientStop Color="#07957A" Offset="1.0"/>
                    </LinearGradientBrush>
                </ImageButton.Background>
            </ImageButton>
            <ImageButton IsEnabled="True" CornerRadius="5" Grid.Column="1" Grid.Row="0" Source="{local:ImageResource Guppi-Memorise.Assets.book-icon-rev.png}" Clicked="LearnTextButton">
                <ImageButton.BackgroundColor>
                    <!-- Necessary crutch -->
                    <Color>White</Color>
                </ImageButton.BackgroundColor>
                <ImageButton.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#00CCAD" Offset="0.0"/>
                        <GradientStop Color="#07957A" Offset="1.0"/>
                    </LinearGradientBrush>
                </ImageButton.Background>
            </ImageButton>
            <ImageButton IsEnabled="True" CornerRadius="5" Grid.Column="0" Grid.Row="1" Source="{local:ImageResource Guppi-Memorise.Assets.stats-icon-rev.png}" Clicked="StatisticsButton">
                <ImageButton.BackgroundColor>
                    <!-- Necessary crutch -->
                    <Color>White</Color>
                </ImageButton.BackgroundColor>
                <ImageButton.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#00CCAD" Offset="0.0"/>
                        <GradientStop Color="#07957A" Offset="1.0"/>
                    </LinearGradientBrush>
                </ImageButton.Background>
            </ImageButton>
            <ImageButton IsEnabled="True" CornerRadius="5" Grid.Column="1" Grid.Row="1" Source="{local:ImageResource Guppi-Memorise.Assets.profile-icon-rev.png}" Clicked="ProfileButton">
                <ImageButton.BackgroundColor>
                    <!-- Necessary crutch -->
                    <Color>White</Color>
                </ImageButton.BackgroundColor>
                <ImageButton.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#00CCAD" Offset="0.0"/>
                        <GradientStop Color="#07957A" Offset="1.0"/>
                    </LinearGradientBrush>
                </ImageButton.Background>
            </ImageButton>
            <Button Text="О приложении" Font="Russo One" TextTransform="None" FontSize="20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" HeightRequest="50" HorizontalOptions="FillAndExpand" IsEnabled="True" CornerRadius="5" Clicked="AboutAppButton">
                <Button.BackgroundColor>
                    <!-- Necessary crutch -->
                    <Color>White</Color>
                </Button.BackgroundColor>
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#08D283" Offset="0.0"/>
                        <GradientStop Color="#1C9D62" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
        <Label Text="О нас" x:Name="aboutUs" FontSize="20" TextColor="#012545" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" VerticalTextAlignment="Center" FontFamily="Russo One" TextDecorations="Underline" Margin="20">
            <Label.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="AboutUsButton"/>
            </Label.GestureRecognizers>
        </Label>
    </StackLayout>
</ContentPage>
